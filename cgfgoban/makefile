#---------------------------------------------------
# メイクファイル(makefile)
#---------------------------------------------------

# コンパイラ
cc  = bcc32

# コンパイルオプション
cflags = -W

# リソースコンパイラ
rc = brc32

# リソースコンパイルオプション
rcflags =


#---------------------------------------------------
# コンパイルするファイルを定義
#---------------------------------------------------

# nameに実行ファイル名/ソースファイル名から拡張子を除いたものを入れます。
name = cgfgoban

# リンクするファイル。ライブラリなどはここにスペースで区切って追加。
objs = $(name).obj cgf_main.obj cgf_pipe.obj \
 cgf_term.obj cgf_win.obj cgf_wsk.obj


# 実行形式のファイル名
exe = $(name).exe

# リソースファイル名
resourcefile = $(name).rc


#---------------------------------------------------
# 生成規則
#---------------------------------------------------

# コンパイル
.cpp.obj:
    $(cc) $(cflags) -c $<

# リンク
$(exe): $(objs) $(resourceobj) $(resourcefile)
    $(cc) $(cflags) -e$(name) $(objs)
    $(rc) $(rcflags) $(resourcefile)

# クリア
clean:
   del *.obj
   del *.tds
